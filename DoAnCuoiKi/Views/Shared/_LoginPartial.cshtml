@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
       
        <a class="pull-right" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello: @UserManager.GetUserName(User)</a>
        <button type="submit" class="pull-right">Logout</button>
    </form>
}
else
{
    <a class="pl-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="pl-4" asp-area="Identity" asp-page="/Account/Login">Login</a>        
}
 